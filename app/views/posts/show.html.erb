<p>
  <b>Name:</b>
  <%=h @post.name %>
</p>

<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>


<h2>Comments</h2> 
<% @post.comments.each do |c| %>  
<p>  
	<b>Commenter:</b>  
	<%=h c.commenter %>  
</p>  
<p>  
	<b>Comment:</b>  
	<%=h c.body %>  
</p> 
<% end %> 
<%= link_to 'Edit Post', edit_post_path(@post) %> | 
<%= link_to 'Back to Posts', posts_path %> | 
<%= link_to 'Manage Comments', post_comments_path(@post) %> 